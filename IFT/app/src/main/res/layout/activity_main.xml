<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="123dp" app:srcCompat="?android:attr/fingerprintAuthDrawable"
                android:id="@+id/imageView"/>
        <Button
                android:text="Administrador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnlogina"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView"/>
        <Button
                android:text="Caminhoneiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btnloginc"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>